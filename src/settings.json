{
    "general": {
        "random_state": 42,
        "status": "test",
        "datetime_format": "%d.%m.%Y_%H.%M",
        "kaggle_api_path": "src/api-keys/kaggle.json",
        
        "kaggle_data_dir":"data/kaggle_data",
        "models_dir":"src/models",
        "train_images_folder_name":"train_v2",
        "cropped_image_size":256
    },
    
    "processing":{
        "dataset_name":"competitions/airbus-ship-detection",
        "processed_data_dir":"data/processed_data/",
        "input_df_name":"train_ship_segmentations_v2.csv",
        "size_threshold":50,
        "empty_amount":1000,
        "has_ships_amount":15000
        
    },
    "callbacks":{
        "checkpoint":{
            "filepath":"outputs/models_checkpoints",
            "save_weigths_only":true,
            "save_best_only":true,
            "monitor":"val_loss",
            "mode":"min",
            "verbose":1
        },
        "reduceLrOnPLat":{
            "monitor":"val_loss",
            "factor":0.33,
            "patrience":1,
            "verbose":1,
            "mode":"min",
            "min_delta":0.0001,
            "cooldown":0,
            "min_lr":1e-8
        },
        "early_stopping":{
            "monitor":"val_loss",
            "mode":"min",
            "verbose":2,
            "patience":10
        }        
    },
    "train": {
        "table_name": "train.csv",
        "batch_size":16,
        "validation_ratio":0.2,
        "augmentation_dict":{
                "featurewise_center": false,
                "samplewise_center": false,
                "rotation_range": 90,
                "width_shift_range": 0.2,
                "height_shift_range": 0.2,
                "shear_range": 0.1,
                "zoom_range": [0.9, 1.25],
                "horizontal_flip": true,
                "vertical_flip": true,
                "fill_mode": "reflect",
                "data_format": "channels_last"
            },
        "model_compile":{
                "optimizer": "adam",
                "loss": "BCE_dice",
                "metrics": ["dice_score"]
            },
        "epochs":1
        },
    "inference": {
        "inp_table_name": "test.csv",
        "model_name": "prod_model.pickle"
    }
}